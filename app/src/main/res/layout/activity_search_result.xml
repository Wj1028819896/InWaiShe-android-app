<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inwaishe.app.ui.SearchResultActivity"
    android:background="@color/bgcolor"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusBarHeight"
        android:background="@color/itembg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/itembg">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="@drawable/corner_bg"
            android:orientation="horizontal"
            android:gravity="center">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etSearchInput"
                android:layout_marginLeft="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="输入搜索内容..."
                android:singleLine="true"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:background="@android:color/transparent"
                android:textSize="@dimen/default_small_text_size"
                android:textColor="@color/itemTextDate"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivClearTxt"
                android:layout_marginRight="10dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_clear"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvCancel"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/itemTextDate"
            android:text="取消"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg"/>
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/vFindding"
        style="@style/SpinKitView.Large.Wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="25dp"
        android:maxHeight="25dp"
        android:maxWidth="25dp"
        android:minWidth="25dp"
        android:layout_gravity="center"
        android:fitsSystemWindows="true"
        android:indeterminate="true"
        app:SpinKit_Color="@color/holo_blue_dark"
        android:visibility="gone"
        android:background="@color/itemNormal"
        />
    <TextView
        android:id="@+id/vNofind"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/itemNormal"
        android:text="找不到你要的东西__"
        android:textColor="@color/itemTextDate"
        android:textSize="@dimen/default_small_text_size"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcSearchResList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/itemNormal"/>

</LinearLayout>
