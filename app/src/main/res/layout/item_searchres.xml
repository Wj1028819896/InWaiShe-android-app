<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/arcTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/default_medium_text_size"
        android:textColor="@color/itemTextTitle"
        android:text="标题"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/arcCommnums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35评论"
            android:textColor="@color/itemTextDate"/>

        <TextView
            android:id="@+id/arcReadTimes"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350查看"
            android:textColor="@color/itemTextDate"/>

    </LinearLayout>

    <TextView
        android:id="@+id/arcDesc"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="魔蛋旗下并不只有特殊按键配列机械键盘产品，例如这款魔蛋crystal晶体就是采用标准美式108键配列，搭配上透明底座设计，颜值表现颇为清新。"
        android:textColor="@color/itemTextDesc"
        android:textSize="@dimen/default_small_text_size"
        />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/arcAuthor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="作者@sss"
            android:textColor="@color/itemTextDate"/>

        <TextView
            android:id="@+id/arcDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表于-2011-1-1"
            android:textColor="@color/itemTextDate"/>

    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"/>

</LinearLayout>