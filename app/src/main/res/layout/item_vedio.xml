<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="@dimen/cardViewMargin"
        app:cardBackgroundColor="@color/itembg"
        app:cardCornerRadius="2dp"
        app:cardElevation="@dimen/cardViewElevation"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/arcTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titledemo"
                android:textColor="@color/itemTextTitle"
                android:singleLine="true"
                android:textSize="@dimen/default_small_text_size"/>

            <ImageView
                android:id="@+id/arcImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/longimgdemo"
                android:scaleType="centerCrop"/>


            <LinearLayout
                android:paddingTop="0dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/arcAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publisherdemo"
                    android:textSize="@dimen/default_tinyx_text_size"
                    android:singleLine="true"
                    android:textColor="@color/holo_blue_dark"/>

                <android.support.v7.widget.AppCompatTextView
                    android:gravity="left|center"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:id="@+id/arcPlaytimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textSize="@dimen/default_tinyx_text_size"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/itemTextDate"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:drawablePadding="10dp"
                    android:id="@+id/arcCommnums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="@dimen/default_tinyx_text_size"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/itemTextDate"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>