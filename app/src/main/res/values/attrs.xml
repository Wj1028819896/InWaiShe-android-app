<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 贝塞尔圆弧控件自定义!-->
    <declare-styleable name="ArcLayout">
        <attr name="arc_height" format="dimension" />
        <attr name="arc_position">
            <enum name="bottom" value="0"/>
            <enum name="top" value="1"/>
            <enum name="left" value="2"/>
            <enum name="right" value="3"/>
        </attr>
        <attr name="arc_cropDirection" format="enum">
            <enum name="cropInside" value="0" />
            <enum name="cropOutside" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="SettingItem">
        <attr name="leftText" format="string"/>
        <attr name="leftIcon" format="integer"/>
        <attr name="rightIcon" format="integer"/>
        <attr name="LtextSize" format="float"/>
        <attr name="LtextColor" format="color"/>
        <attr name="leftIconSize" format="dimension"/>
        <attr name="leftTextMarginLeft" format="dimension"/>
        <attr name="rightStyle" format="enum">
            <enum name="iconShow" value="0"/>
            <enum name="iconHide" value="1"/>
            <enum name="iconCheck" value="2"/>
            <enum name="iconSwitch" value="3"/>
        </attr>
        <attr name="isShowRightText" format="boolean"/>
        <attr name="rightText" format="string"/>
        <attr name="rightTextSize" format="float"/>
        <attr name="rightTextColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="BezierRoundView">
        <attr name="color_bez" format="color"/>
        <attr name="color_touch" format="color"/>
        <attr name="color_stroke" format="color"/>
        <attr name="time_animator" format="integer"/>
        <attr name="round_count" format="integer"/>
        <attr name="radius" format="dimension"/>

    </declare-styleable>
</resources>
